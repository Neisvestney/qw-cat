{
  "$schema": "https://schema.tauri.app/config/2",
  "app": {
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": ["$TEMP/**"]
      },
      "csp": "default-src 'none'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: data:; font-src 'self' asset: data:; media-src 'self' http://127.0.0.1:*; connect-src 'self' ipc: http://ipc.localhost http://127.0.0.1:* https://api.github.com; frame-src 'none'; object-src 'none'; base-uri 'none'; form-action 'none';"
    },
    "windows": [
      {
        "title": "Qw Cat",
        "height": 958,
        "width": 1300,
        "backgroundColor": "#121212",
        "theme": "Dark"
      }
    ]
  },
  "build": {
    "beforeBuildCommand": "yarn build",
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Video",
    "longDescription": "Desktop application designed for quick video trimming and processing.\nBuilt with Tauri v2 and React, powered by FFmpeg.\nYou can install ffmpeg from your package manager before launching the app.",
    "targets": ["nsis", "deb", "rpm", "appimage"],
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "installerIcon": "./icons/icon.ico"
      }
    },
    "linux": {
      "deb": {
        "recommends": ["ffmpeg", "libunity9"],
        "section": "video",
        "desktopTemplate": "./bundle/template.desktop",
        "files": {
          "/usr/share/metainfo/io.github.neisvestney.qw-cat.metainfo.xml": "bundle/io.github.neisvestney.qw-cat.metainfo.xml"
        }
      },
      "rpm": {
        "recommends": ["ffmpeg", "libunity9"],
        "desktopTemplate": "./bundle/template.desktop",
        "files": {
          "/usr/share/metainfo/io.github.neisvestney.qw-cat.metainfo.xml": "bundle/io.github.neisvestney.qw-cat.metainfo.xml"
        }
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "fileAssociations": [
      {
        "ext": ["mp4", "m4v", "mov", "avi", "wmv", "flv", "f4v", "webm", "mkv", "mpg", "mpeg"],
        "mimeType": "video/mp4;video/quicktime;video/x-msvideo;video/x-ms-wmv;video/x-flv;video/webm;video/x-matroska;video/mpeg;"
      }
    ]
  },
  "identifier": "io.github.neisvestney.qw-cat",
  "plugins": {
    "typegen": {
      "excludePatterns": null,
      "includePatterns": null,
      "includePrivate": false,
      "outputPath": "../src/generated",
      "projectPath": ".",
      "typeMappings": null,
      "validationLibrary": "none",
      "verbose": false,
      "visualizeDeps": false
    }
  },
  "productName": "Qw Cat"
}
